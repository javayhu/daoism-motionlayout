<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/icon_size_large"
    tools:showIn="@layout/activity_home"
    app:cardUseCompatPadding="true">

    <!-- cardUseCompatPaddingï¼šhttps://stackoverflow.com/a/61482756/2357028 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/animalImageView"
                android:layout_width="@dimen/animal_size"
                android:layout_height="@dimen/animal_size"
                android:layout_gravity="center"
                android:contentDescription="@string/animal"
                android:src="@drawable/ic_animal_1" />

            <TextView
                android:id="@+id/animalTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_middle"
                android:gravity="center"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/text_size_normal"
                tools:text="@string/animal" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>